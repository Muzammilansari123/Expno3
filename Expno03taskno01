#include<stdio.h>

int main()
{
float num1,num2,result;
int mod_result;
char operator;

printf("\t\t\t**Calculator**\n\n\n");
printf("\t\t\t  Operations :\n");
printf("\t\t '+' : Addition\n");
printf("\t\t '-' : Subtraction\n");
printf("\t\t '/' : Division\n");
printf("\t\t '*' : Multiplication ");
printf("\t\t '%' : Modulus\n\n");


repeat:

printf("Enter The First Operand:");
scanf("%f",num1);
printf("Enter The Second Operand:");
scanf("%f",num2);
printf("Enter The Opretion :");
scanf(" %c",operator);

switch(operator)
{
    case '+':
        result=num1+num2;
        printf("%.1f+%.1f=%1f",num1,num2,result);
        break;

    case '-':
        result=num1-num2;
        printf("%.1f-%.1f=%1f",num1,num2,result);
        break;

    case '*':
    result=num1*num2;
    printf("%.1f*%.1f=%1f",num1,num2,result);
    break;

    case '/':
        if(num2==0){
            printf("cannot divided by zero");
            break;
        }
        result=num1/num2;
        printf("%.1f/%.1f=%.1f",num1,num2,result);

    case '%':
    mod_result=(int)num1%(int)num2;
    printf("%.1f%%%.1f=%1f",num1,num2,result);
    break;

    default:
        printf("Enter Opration Is Invalide");

}
printf("\nContinue?(Y/N):");
scanf(" %c",&operator);
if(operator =='N'||operator =='n'){
    printf("Thank you for using Calculator");
    return 0;
}

printf("\n\n");
goto repeat;

return 0;
}
